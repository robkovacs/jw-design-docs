{% extends '../_includes/layout.njk' %}

{% block content %}
    <article>
        {% call stack() %}
            {{ toggleSwitch({
                content: "Toggle me"
            }) }}
            {{ toggleSwitch({
                content: "Toggle me",
                description: "Here's a little extra to help you decide whether or not to do it",
                framed: true
            }) }}
            {{ toggleSwitch({
                content: "Toggle me",
                disabled: true
            }) }}
            {{ toggleSwitch({
                content: "Toggle me",
                description: "Here's a little extra to help you decide whether or not to do it",
                framed: true,
                disabled: true,
                checked: true
            }) }}
        {% endcall %}
    </article>
{% endblock %}